 Filter prime numbers using filter + lambda
def is_prime(n):
    if n < 2:
        return False
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return False
    return True

nums = [1, 2, 3, 4, 5, 11, 15, 17]
primes = list(filter(lambda x: is_prime(x), nums))
print(primes)


 Convert grams to ounces
def grams_to_ounces(grams):
    return grams * 28.3495231


 Fahrenheit to Celsius
def fahrenheit_to_celsius(F):
    return (5 / 9) * (F - 32)


 Chickens and rabbits puzzle
def solve(numheads, numlegs):
    for chickens in range(numheads + 1):
        rabbits = numheads - chickens
        if 2 * chickens + 4 * rabbits == numlegs:
            return chickens, rabbits
    return None


 Filter primes in a list
def filter_prime(numbers):
    return [n for n in numbers if is_prime(n)]


 String permutations
from itertools import permutations

def string_permutations(s):
    return [''.join(p) for p in permutations(s)]


 Reverse words in a sentence
def reverse_sentence(s):
    return ' '.join(s.split()[::-1])


 Check if list has 33
def has_33(nums):
    for i in range(len(nums) - 1):
        if nums[i] == nums[i + 1] == 3:
            return True
    return False


 Check if list contains 007 in order
def spy_game(nums):
    code = [0, 0, 7]
    for n in nums:
        if n == code[0]:
            code.pop(0)
        if not code:
            return True
    return False


 Volume of a sphere
def sphere_volume(r):
    return (4/3) * math.pi * r**3


 Unique elements from list
def unique_list(lst):
    res = []
    for i in lst:
        if i not in res:
            res.append(i)
    return res


 Palindrome check
def is_palindrome(s):
    s = s.replace(" ", "").lower()
    return s == s[::-1]


 Histogram
def histogram(lst):
    for n in lst:
        print('*' * n)


 Guess the number game
import random

def guess_game():
    name = input("Hello! What is your name?\n")
    number = random.randint(1, 20)
    print(f"Well, {name}, I am thinking of a number between 1 and 20.")

    attempts = 0
    while True:
        guess = int(input("Take a guess.\n"))
        attempts += 1
        if guess < number:
            print("Your guess is too low.")
        elif guess > number:
            print("Your guess is too high.")
        else:
            print(f"Good job, {name}! You guessed my number in {attempts} guesses!")
            break

